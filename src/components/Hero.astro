---
import HeroCards from "../../elementos/HeroCards.jsx";
type Props = {};
const {} = Astro.props;
---

<div class="hero-container flex justify-center items-center flex-col">
    <section
        id="heroDistri"
        class="w-full h-auto flex flex-col-reverse md:flex-row justify-center items-center text-center md:text-left px-4 md:px-0"
    >

    <div class="w-full md:w-1/2 h-full flex flex-col justify-center items-center md:items-start pt-8 md:pt-[5%] gap-y-0 px-4 md:pl-20">

        <h1 class="text-blancoRosfin h1-hero text-center md:text-left my-0">

                ROSFIN S.A.
            </h1>
            <h3 class="text-blancoRosfin h3-hero text-center md:text-left max-w-full my-0">

                Desde <span class="text-naranjaRosfin">1957</span> creando <span
                    class="text-naranjaRosfin">soluciones de hierro.</span
                >
            </h3>
            <button class="btn-primary !ml-0">Cotiza tu proyecto</button>
        </div>


        <div
            class="w-full md:w-1/2 h-full relative overflow-hidden flex justify-center items-center mb-4 md:mb-0"
        >
            <img
                class="logo-hero md:translate-x-2/4"
                src="/img/logo.svg"
                alt="Logo Rosfin"
            />
        </div>
    </section>

    <div
        class="w-full relative bottom-4 h-auto flex justify-center items-center gap-8 text-blancoRosfin flex-wrap"
    >
        <HeroCards client:visible />
    </div>
</div>

<style>
    .hero-container {
        width: 100%;
        height: auto;
        min-height: 100vh;
        background-color: #4b5945;
        background-image: url("https://www.transparenttextures.com/patterns/brick-wall-dark.png");
    }

    .logo-hero {
        width: clamp(600px, 40vw, 1135px);
        height: auto;
    }
</style>
