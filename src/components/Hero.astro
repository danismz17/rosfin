---
import HeroCards from "../../elementos/HeroCards.jsx";
type Props = {};
const {} = Astro.props;
---

<div class="hero-container flex justify-center items-center flex-col">
    <section class="w-full h-auto flex justify-center items-center">
        <div class="w-full h-full flex flex-col items-start px-12 pt-[5%]">
            <h1 class="text-red text-blancoRosfin h1-hero">ROSFIN S.A.</h1>
            <h2 class="font-alata text-blancoRosfin h2-hero text-left pr-[20px]">Desde <span class="text-naranjaRosfin">1957</span> creando <span
class="text-naranjaRosfin">soluciones de hierro.</span>
            </h2>
            <button class="btn-primary">Cotiza tu proyecto</button>
        </div>

        <div class="w-full h-full relative overflow-hidden flex justify-center items-center">
            <img class="logo-hero translate-x-2/4" src="/img/logo.svg" alt="" />
        </div>
    </section>

    <div
        class="w-full bg-refd-800 h-auto flex justify-center items-center gap-8 text-blancoRosfin pt-[5%] flex-wrap"
    >
        <HeroCards client:visible />
    </div>
</div>

<style>
    .hero-container {
        width: 100%;
        height: auto;
        min-height: 100vh;
        background-color: #4b5945;
        background-image: url("https://www.transparenttextures.com/patterns/brick-wall-dark.png");
        /* This is mostly intended for prototyping; please download the pattern and re-host for production environments. Thank you! */
    }

    .h1-hero {
        font-size: clamp(2rem, 10vw, 18.75rem);
        font-family: "Vina Sans", cursive;
        padding-left: 5%;
    }

    .h2-hero {
        font-size: clamp(1rem, 5vw, 2rem);
        padding-left: 5%;
    }

    .logo-hero {
        width: clamp(600px, 40vw, 1135px);
        height: auto;
    }

    .btn-primary {
        @apply my-10 ml-[5%] bg-negroRosfin text-white font-bold py-3 px-8 rounded-lg shadow-lg hover:bg-opacity-90 transition ease-in-out duration-300;
        letter-spacing: 1px;
    }
</style>
