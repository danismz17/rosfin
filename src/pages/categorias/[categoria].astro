---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';

export async function getStaticPaths() {
  return [
    { params: { categoria: 'mecanica' } },
    { params: { categoria: 'muebles' } },
    { params: { categoria: 'electricidad' } },
    { params: { categoria: 'construccion' } },
    { params: { categoria: 'ferreteria' } },
    { params: { categoria: 'trabajosamedida' } },
  ];
}

const { categoria } = Astro.params;
---

<Layout>
  <Header />

  <section class="pt-32 pb-20 px-6 min-h-screen bg-[#270707]">
    <h1 class="text-3xl font-bold text-center mb-8 text-verdeRosfin">
      Estás viendo la categoría: {categoria}
    </h1>

    <p class="text-center text-gray-700 max-w-2xl mx-auto">
      Aquí se mostrarán los productos de la categoría <strong>{categoria}</strong> cargados desde un archivo JSON.
    </p>
  </section>
</Layout>
